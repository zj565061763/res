<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/res_stroke"/>

            <corners android:topLeftRadius="@dimen/res_corner_small"
                     android:topRightRadius="@dimen/res_corner_small"/>
        </shape>
    </item>
    <item
        android:left="@dimen/res_size_stroke_small"
        android:right="@dimen/res_size_stroke_small"
        android:top="@dimen/res_size_stroke_small">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>

            <corners android:topLeftRadius="@dimen/res_corner_small"
                     android:topRightRadius="@dimen/res_corner_small"/>
        </shape>
    </item>

</layer-list>